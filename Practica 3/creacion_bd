CREATE TABLE eventos (
	id VARCHAR(5), 
	nombre VARCHAR(50),
	organizador VARCHAR(25),
	fecha VARCHAR(30),
	imagen VARCHAR(100),
	imagen_cre VARCHAR(50),
	texto TEXT, 
	PRIMARY KEY (id)
 );

