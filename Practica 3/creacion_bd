
CREATE TABLE eventos (
	id VARCHAR(5), 
	nombre VARCHAR(50),
	organizador VARCHAR(25),
	fecha VARCHAR(30),
	texto TEXT,
	imagen VARCHAR(100),
	fecha_p_m DATETIME,
	PRIMARY KEY (id)
 );

