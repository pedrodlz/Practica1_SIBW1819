CREATE TABLE tiene_c (
	id VARCHAR(5),
	ip VARCHAR(16),
	nombre VARCHAR(25),
	correo VARCHAR(50),
	fecha DATETIME,
	cuerpo TEXT,
	PRIMARY KEY(id)
 );

